{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "chat.response.v1",
  "title": "ChatResponse",
  "description": "Schema for chat stream response events",
  "type": "object",
  "required": ["type"],
  "properties": {
    "type": {
      "type": "string",
      "enum": ["text", "done", "error"]
    },
    "text": {
      "type": "string",
      "description": "Text content for text events"
    },
    "error": {
      "type": "string",
      "description": "Error message for error events"
    }
  },
  "additionalProperties": false
}
