DATABASE_URL=postgres://postgres:postgres@localhost:5432/acme
NEXT_PUBLIC_API_URL=http://localhost:3000
PORT=3000
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
OPENAI_API_KEY=
AI_MODEL=gpt-4o-mini

# CORS configuration: Required in production. Set to the exact origin allowed to access the API (e.g., https://example.com)
ALLOWED_ORIGIN=

# Resend Email Configuration (Required in production for email verification)
# In development (NODE_ENV !== "production"), verification tokens are echoed in API responses for testing.
# In production with RESEND_API_KEY set, verification emails are sent via Resend.
RESEND_API_KEY=
# MAIL_FROM must be a verified sender/domain in Resend (e.g., "Your App <no-reply@yourdomain.com>")
MAIL_FROM="Your App <no-reply@yourdomain.com>"
# APP_BASE_URL is used to construct verification links (e.g., ${APP_BASE_URL}/auth/verify?token=...)
APP_BASE_URL=http://localhost:3000
# Set RESEND_DRY_RUN=1 to log email payload instead of sending (useful for CI)
RESEND_DRY_RUN=

# Dev Token Echo (for testing production builds locally)
# Set to "true" to enable token echoing even in production builds.
# WARNING: NEVER set this in actual production environments!
# ALLOW_DEV_TOKENS=true
